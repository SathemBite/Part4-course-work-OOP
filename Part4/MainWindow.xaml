<Window x:Name="Language_courses" x:Class="Part4.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Part4"
        mc:Ignorable="d"
        Title="MainWindow" Height="640" Width="960" Foreground="Black" WindowStartupLocation="CenterScreen" UseLayoutRounding="False">
    <Window.Background>
        <LinearGradientBrush EndPoint="0.5,1" MappingMode="RelativeToBoundingBox" StartPoint="0.5,0">
            <GradientStop Color="#FF57CD77"/>
            <GradientStop Color="#FFD8E7EC" Offset="1"/>
            <GradientStop Color="#FF9CCDDB" Offset="0.542"/>
        </LinearGradientBrush>
    </Window.Background>
    <Grid RenderTransformOrigin="0.5,0.5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Button x:Name="button" Content="Button" HorizontalAlignment="Left" Margin="36,40,0,0" VerticalAlignment="Top" Width="96" Click="button_Click" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="16" Height="48" RenderTransformOrigin="0.5,0.5" Background="#FFECE5E5">
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleY="1" ScaleX="1"/>
                    <SkewTransform AngleY="0" AngleX="0"/>
                    <RotateTransform Angle="0"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Button.RenderTransform>
        </Button>
        <RichTextBox x:Name="richTextBox" Margin="218,40,0,35" RenderTransformOrigin="0.508,0.506" HorizontalAlignment="Left" Width="692" ScrollViewer.CanContentScroll="True" VerticalScrollBarVisibility="Auto" Background="#FFB4B4B4" IsReadOnly="True">
            <FlowDocument Cursor="Arrow">
                <Paragraph>
                    <Run Text="RichTextBox"/>
                </Paragraph>
            </FlowDocument>
        </RichTextBox>

    </Grid>
</Window>
